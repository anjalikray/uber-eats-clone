{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap":"lerna exec npm install",
    "bootstrap:ci":"lerna exec npm ci -- --ignore-scripts",
    "build":"lerna run build",
    "clean":"lerna run clean",
    "nx-build-all":"nx run-many --target=build",
    "lint": "eslint . --ext .ts --fix --quiet",
    "prepare": "husky install",
    "prettier": "node node_modules/prettier/bin-prettier --check '**/*.{js,json,ts,yml,yaml}'",
    "prettier:write": "node node_modules/prettier/bin-prettier --write \"**/*.{js,json,ts,yml,yaml}\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^9.1.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "fbjs-scripts": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lerna": "^8.2.4",
    "nx": "^22.1.3",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8"
  }
}
